<idea-plugin require-restart="true">
  <id>com.jetbrains.rider.plugins.actions</id>
  <name>ReSharper SDK â€“ Actions</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://github.com/JetBrains/resharper-sdk-code-samples">Matthias Koch</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <description>
<![CDATA[
<p>Adds a global action that triggers a message box.</p>
]]>
  </description>

  <actions resource-bundle="messages.RiderPluginActionsBundle">
    <!-- The ids used here are only relevant for bundle properties and frontend testing -->
    <action id="Sample" class="com.jetbrains.rider.plugins.samples.actions.SampleAction">
      <keyboard-shortcut keymap="$default" first-keystroke="shift control I"/>
      <keyboard-shortcut keymap="Visual Studio" first-keystroke="shift control I"/>
      <keyboard-shortcut keymap="Visual Studio OSX" first-keystroke="shift meta I"/>
    </action>
    <action id="SampleFrontendTested" class="com.jetbrains.rider.plugins.samples.actions.SampleFrontendTestedAction" />
  </actions>

</idea-plugin>
