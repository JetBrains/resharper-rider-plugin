<idea-plugin require-restart="true">
  <id>com.jetbrains.rider.plugins.sampleplugin</id>
  <name>SamplePlugin</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://project-url">Author</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <description>
<![CDATA[
<p>Sample description</p>
]]>
  </description>
<!--#if (include-samples) -->

  <extensions defaultExtensionNs="com.intellij">
    <applicationConfigurable groupId="language" instance="com.jetbrains.rider.plugins.sampleplugin.SampleOptionsPage" id="SampleOptionsPage" />
    <toolWindow id="NUKE"
                secondary="true"
                anchor="right"
                factoryClass="com.jetbrains.rider.plugins.nuke.toolWindow.NukeToolWindowFactory"
                icon="ReSharperIcons.Common.Success"/>

    <rdclient.view key="com.jetbrains.rider.plugins.nuke.BeNukeToolWindowPanel"
                   implementationClass="com.jetbrains.rider.plugins.nuke.toolWindow.NukeToolWindowPanel" />
  </extensions>

  <project-components>
    <component>
      <implementation-class>com.jetbrains.rider.plugins.sampleplugin.</implementation-class>
    </component>
  </project-components>

  <actions>
    <action id="SampleAction" class="com.jetbrains.rider.plugins.sampleplugin.SampleAction"
            text="Do Something" description="Do Something Description">
    </action>
  </actions>
<!--#endif -->

</idea-plugin>
